{% extends 'layouts/default.njk' %}
{% set PAGE_DATA = {
  TITLE: 'お問い合わせ',
  DESCRIPTION: 'ページ概要',
  NAV: 'contact',
  BREADCRUMB_ITEMS: [
    {
      link: '#',
      name: 'HOME'
    },
    {
      link: '#',
      name: 'お問い合わせ',
      current: true
    }
  ]
} %}

{# ▼▼▼ コンポーネント読み込み ▼▼▼ #}
{% from 'components/hero.njk' import default as HERO %}
{% from 'components/breadcrumb.njk' import default as BREADCRUMB %}
{# ▲▲▲ コンポーネント読み込み ▲▲▲ #}

{% block HERO_CONTENT %}
  {{ HERO('お問い合わせ', 'CONTACT') }}
{% endblock %}

{% block PAGE_CONTENT %}
  {{ BREADCRUMB(PAGE_DATA.BREADCRUMB_ITEMS) }}
  {# お名前 #}
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">お名前</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="山田 太郎">
        </div>
      </div>
    </div>
  </div>
  {# メールアドレス #}
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">メールアドレス</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="email" placeholder="sample@mail.com">
        </div>
      </div>
    </div>
  </div>
  {# お問い合わせ種類 #}
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">お問い合わせ種類</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <div class="select is-fullwidth">
            <select>
              <option>種類1</option>
              <option>種類2</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
  {# お問い合わせ内容詳細 #}
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">お問い合わせ内容</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <textarea class="textarea" placeholder="入力して下さい"></textarea>
        </div>
      </div>
    </div>
  </div>
  {# 送信 #}
  <div class="field is-horizontal">
    <div class="field-label"></div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <button class="button is-primary">送信</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block BOTTOM_CONTENT %}
  {% include 'components/contact.njk' %}
{% endblock %}