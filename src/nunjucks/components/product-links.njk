{% macro default(ITEMS) %}
  <div class="row gy-2">
    {% for ITEM in ITEMS %}
      <div class="col-12">
        <div class="row">
          <div class="col-3">
            <img class="img-fluid img-thumbnail" src="{{ ITEM.thumb }}">
          </div>
          <div class="col-9">
            <h2>{{ ITEM.name }}</h2>
            <p>{{ ITEM.description }}</p>
            <a href="{{ ITEM.link }}">詳細を見る</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endmacro %}

{% macro small(ITEMS) %}
  <div class="row g-3">
    {% for ITEM in ITEMS %}
      <div class="col-3">
        <div class="card">
          <img class="card-img-top" src="{{ ITEM.thumb }}">
          <div class="card-body">
            <h5 class="card-title">{{ ITEM.name }}</h5>
            <a href="{{ ITEM.link }}" class="btn btn-primary">詳細を見る</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endmacro %}