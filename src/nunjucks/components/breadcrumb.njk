{% macro default(ITEMS) %}
<nav class="flex">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    {% for ITEM in ITEMS %}
      <li class="inline-flex items-center">
        {% if loop.index == 1 %}
          <a href="{{ ITEM.link }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900">
            <i class="fas fa-home mr-2"></i>
            {{ ITEM.name }}
          </a>
        {% elif loop.index == ITEMS.length %}
          <span class="inline-flex items-center text-sm font-medium text-gray-500">
            <i class="fas fa-angle-right mr-2"></i>
            {{ ITEM.name }}
          </span>
        {% else %}
          <a href="{{ ITEM.link }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900">
            <i class="fas fa-angle-right mr-2"></i>
            {{ ITEM.name }}
          </a>
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>
{% endmacro %}